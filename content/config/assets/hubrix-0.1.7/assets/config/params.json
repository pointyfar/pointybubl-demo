{
  "modelJson": {
    "subtitle": "My Awesome Site",
    "brandImage": "",
    "scss": {
      "brandFont": "'Oswald', sans-serif",
      "primary": "CadetBlue",
      "primaryInvert": "#fff",
      "footnote": "FOOTNOTE: ",
