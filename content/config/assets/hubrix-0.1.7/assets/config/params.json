  "jsonFields": [
    {
      "key": "copyright",
      "type": "input",
      "templateOptions": {
        "label": "Copyright",
        "placeholder": "Â© 2018 Myself",
        "description": "Copyright note"
      }
    },
    {
      "key": "subtitle",
      "type": "input",
      "templateOptions": {
        "label": "Subtitle",
        "placeholder": "My Awesome Site",
        "description": "Site subtitle"
      }
    },
    {
      "key": "brandImage",
      "type": "input",
      "templateOptions": {
        "label": "Brand Image",
        "placeholder": "img/awesome-logo.png",
        "description": "Image to feature on hero on homepage"
      }
    },
    {
      "key": "mainSections",
      "type": "array",
      "fieldArray": {
        "type": "input",
        "templateOptions": {
          "label": "Add sections to include (on menu)"
        }
      }
    },
    {
      "key": "enableSearch",
      "wrappers": ["panel"],
      "templateOptions": {
        "label": "Configure search feature"
      },
      "fieldGroup": [
        {
          "key": "enable",
          "type": "checkbox",
          "templateOptions": {
            "label": "Enable search feature ",
            "description": "Make sure to configure output formats for home to include JSON, and to position the search widget."
          }
        }
        
      ]
    },
    {
      "key": "scss",
      "wrappers": ["panel"],
      "templateOptions": {
        "label": "Configure SCSS style options"
      },
      "fieldGroup": [
        {
          "key": "brandFont",
          "type": "input",
          "templateOptions": {
            "label": "Brand Font",
            "placeholder": "'Oswald', sans-serif",
            "description": "Font to use for brand (ie navbar)"
          }
        },
        {
          "key": "primary",
          "type": "input",
          "templateOptions": {
            "label": "Primary Color ",
            "placeholder": "CadetBlue",
            "description": "Primary color (Hex or name value)"
          }
        },
        {
          "key": "primaryInvert",
          "type": "input",
          "templateOptions": {
            "label": "Invert color to primary",
            "placeholder": "white",
            "description": "I.e. text color for a button with {primary} background color"
          }
        },
        {
          "key": "linkColor",
          "type": "input",
          "templateOptions": {
            "label": "Link color",
            "placeholder": "navy",
            "description": "Color to use for links"
          }
        }
      ]
    }



  ]
}